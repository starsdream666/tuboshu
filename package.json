{
  "name": "tuboshu",
  "version": "v2.1.1",
  "main": "out/main.js",
  "type": "module",
  "scripts": {
    "start:debug": "electron --enable-logging --log-file=electron.log --trace-warnings .",
    "start": "electron-vite build && electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder"
  },
  "author": {
    "name": "deepshit2025",
    "email": "lyf200@qq.com"
  },
  "license": "ISC",
  "description": "tuboshu",
  "devDependencies": {
    "electron": "^36.0.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^3.1.0"
  },
  "dependencies": {
    "fingerprint-generator": "^2.1.63"
  },
  "build": {
    "appId": "com.tuboshu.tuboshu",
    "productName": "Tuboshu",
    "npmRebuild": false,
    "files": [
      "**/*",
      "!app/**/*",
      "!.github/**/*",
      "!.git/**/*",
      "!.idea/**/*",
      "!gui/setting/**/*",
      "!dist/*",
      "!README.md",
      "!.node-version",
      "!electron.vite.config.js",
      "!pnpm-workspace.yaml",
      "!node_modules/**/{.cache,.bin,test}"
    ],
    "extraResources": [
      {
        "from": "./resource/plugin",
        "to": "plugin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "./resource/lnk",
        "to": "lnk",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "compression": "maximum",
    "removePackageScripts": true,
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "resource/build/mac_icon.icns",
      "identity": null,
      "artifactName": "${productName}-Setup-${version}-mac-${arch}.${ext}"
    },
    "win": {
      "target": "nsis",
      "icon": "resource/build/win_icon.ico",
      "artifactName": "${productName}-Setup-${version}-win-${arch}.${ext}"
    },
    "linux": {
      "category": "utility",
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/linux_icon.png",
      "artifactName": "${productName}-Setup-${version}-linux-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico"
    }
  }
}
